//C program to find whether the number(element) is present in given array or not. (Using Dynamic Memory Allocation)
#include <stdio.h>
#include <stdlib.h>
int main() {
    int n; //total number of elements
int num; //number to be searched for in array
    int *arr; //array of integer
    //taking input from user
    printf("Enter the total number of elements in array: ");
    scanf("%d", &n);
    printf ("Enter the number to be searched for in array: ");
    scanf ("%d",&num);
    // Allocating memory for n number of elements (array)
    arr = (int *)calloc(n, sizeof(int));
    if (arr == NULL) {
        printf("Error!!! Memory not allocated.");
        exit(0);
    }
    // taking numbers from user and storing them in memory
    for (int i = 0; i < n; ++i) {
        printf("Enter the Number(element) %d: ", i + 1);
        scanf("%d", arr+ i);
    }
    // Finding if the number is present in array or not.
    for (int i = 0; i < n; ++i) {
        if (*arr==num){
printf("Yes, the number %d is present in the array.",num);
exit(0);
 }
 arr+=1;
}
printf("No, the number %d is not present in the array.",num);
    return 0;
}
